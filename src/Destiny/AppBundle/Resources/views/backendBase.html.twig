{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('asset/backend/css/dashboard.css') }}" rel="stylesheet">
    <link href="{{ asset('asset/common/css/modal.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}Destiny Dashboard{% endblock %}

{% block body %}
    <nav class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Destiny Project</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('indexBackend') }}">{{ 'menu.dashboard' | trans }}</a></li>
	                <li class="dropdown">
		                <a aria-expanded="false" role="button" aria-haspopup="true" data-toggle="dropdown" class="dropdown-toggle" href="#" id="drop1">
			                {{ 'menu.settings' | trans }}
			                <span class="caret"></span>
		                </a>
		                <ul aria-labelledby="drop1" role="menu" class="dropdown-menu">
			                <li role="presentation">
				                <a href="{{ path('listBackend',{'entity':'idiomas'}) }}" tabindex="-1" role="menuitem">
					                {{ 'menu.languages' | trans }}
				                </a>
			                </li>
		                </ul>
	                </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
{#            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    {% block backendMenuLeft %}
                        {% include "@DestinyApp/Backend/includes/backendMenuLeft.html.twig" %}
                    {% endblock %}
                </ul>
            </div>#}
            <div class="col-md-12 main">

                <h1 class="page-header">{% block backendTitle %}{% endblock %}</h1>

                <div class="col-md-12 alerta">
                    {% for type, flashMessage in app.session.flashbag.all() %}
                        <div class="alert alert-{{ type }} fade in">
                            <a data-dismiss="alert" class="pull-right" href="" type="button">
                                <i class="fa fa-times"></i>
                            </a>
                            {% if flashMessage.title is defined %}
                                <strong>{{ flashMessage.title }}</strong><br>
                                {{ flashMessage.message }}
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>

                {% block  backendBody %}
                {% endblock %}

            </div>
        </div>
    </div>
{% endblock %}
