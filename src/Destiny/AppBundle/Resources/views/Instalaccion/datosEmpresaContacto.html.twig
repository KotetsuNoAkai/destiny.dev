{% extends "DestinyAppBundle::instalacionBase.html.twig" %}

{% block backendTitle %}{{ 'instalacion.datosContacto.titulo' | trans }}{% endblock %}

{% block backendBody %}

	<h2>{{ 'instalacion.datosContacto.info' | trans }}</h2>
	<div class="progress">
		<div class="progress-bar progress-bar-striped active" role="progressbar"
		     aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
			<span class="sr-only">25% Complete</span>
		</div>
	</div>
{% include 'DestinyAppBundle:Instalaccion:form.html.twig' %}
	<div class="col-md-6">
		<ul>
			<li>{{ 'empresa.form.nombre' | trans }}: {{ empresa }}</li>
			<li>{{ 'empresa.form.slogan' | trans }}: {{ empresa.slogan }}</li>

			<li>{{ 'empresa.form.archivo' | trans }}: <img src="{{ asset( empresa.webPath ) }}" width="20%"></li>
		</ul>
	</div>
{% endblock %}
